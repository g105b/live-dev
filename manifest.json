{
	"manifest_version": 2,
	"name": "Live Reload",
	"version": "1.0",

	"description": "Automatically reloads client-side assets without refreshing.",

	"icons": {
		"48": "icon.svg"
	},

	"permissions": [
		"activeTab",
		"tabs"
	],

	"page_action": {
		"default_icon": "icon.svg",
		"default_title": "Live Reload",
		"show_matches": ["<all_urls>"]
	},

	"background": {
		"scripts": ["main.js"]
	}
}